        </div>
    </div>
    <div class="col-md-6">
        <div class="card fs-5"> <!-- TU dodano fs-5, które decyduje o wielkości liter w tabeli. -->
            <!-- <a asp-controller="Collections" asp-action="Index" class="text-decoration-none text-dark"> Tak było przed kotwicą - anchorem -->
            <a asp-controller="Collections" asp-action="Index" asp-fragment="koniec-tabeli" class="text-decoration-none text-dark"> <!--Tak jest obecnie z anchorem-->
                <div class="card-header">Ostatnio dodane elementy</div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in ViewBag.OstatnieKolekcje as List<Kolekcje.Models.Collection>)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@item.Title</strong>
                                   w kategorii 
                                @item.Category?.Name
                            </div>
                            @if (!string.IsNullOrEmpty(item.ImagePath))
                            {
                                <img src="@item.ImagePath" alt="miniatura" style="max-width: 200px;" />
                            }
                        </li>
                    }
                </ul>
            </a>
        </div>
    </div>
</div>

